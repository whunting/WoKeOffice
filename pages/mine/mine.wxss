.container{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: slategray
}

.mine-info-holder{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 40%;
  background-color: springgreen;
}

.avatar{
  margin-top: 140rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.nickname{
  margin-top: 20rpx;
  font-size: 36rpx;
}

.wxid{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666666;
}

.item-holder{
  display: flex;
  align-items: center;
  width: 100%;
  height: 15%;
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: skyblue;
}

.item-icon{
  width: 30rpx;
  height: 30rpx;
}

.item-label{
  font-size: 30rpx;
}
