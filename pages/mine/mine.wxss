.container{
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: slategray;
}

.my-info-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 460rpx;
  background-color: springgreen;
}

.my-info-content{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 300rpx;
}

.avatar{
  margin-left: 60rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.my-name-wrapper{
  margin-left: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.nickname{
  margin-top: 20rpx;
  font-size: 40rpx;
}

.wxid{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
}

.info-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 160rpx;
}

.info-item-wrapper{
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
  height: 160rpx;
}

.info-item-head{
  display: flex;
  align-items: center;
  width: 160rpx;
  height: 60rpx;
}

.info-item-icon{
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: wheat;
}

.info-item-word{
  margin-left: 20rpx;
  font-size: 28rpx;
}

.info-item-content{
  margin-top: 20rpx;
  width: 160rpx;
  height: 50rpx;
  border-radius: 10rpx;
  background-color: #CCCCFF;
  color: white;
  font-size: 28rpx;
  text-align: center;
}

.item-wrapper{
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: skyblue;
}

.item-icon{
  width: 30rpx;
  height: 30rpx;
}

.item-label{
  font-size: 30rpx;
}
