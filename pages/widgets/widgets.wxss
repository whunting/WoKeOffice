.scroll-view{
  height: 100%;
}

.flex-wrap{
  display: flex;
  flex-direction: row;
}

.header {
  height: 54px;
  align-items: center;
  background-color: #FFF;
}

.new-todo {
  flex: 1;
  font-size: 18px;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-left: 12px;
  line-height: 100%;
  height: 100%;
}

.add {
  color: #FFF;
  background-color: #1aad19;
  font-size: 16px;
  line-height: 53px;
  padding: 0 16px;
}

.tappable:hover {
  opacity: .6;
}
