.title-bar-wrapper{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 666; /** 没事干拔高z轴你管我啊~ **/
  width: 100%;
}

.title-bar{
  display: flex;
  flex-direction: row;
  padding: 6rpx;
  background-color: white;
}

.search-input-wrapper{
  flex: 8;
  padding: 4rpx;
}

.search-input{
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 32rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #707070;
}

.title-bar-btn-wrapper{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}

.title-bar-btn{
  flex: 1;
  width: 50rpx;
  height: 50rpx;
}