.title-bar-wrapper{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 666; /** 没事干拔高z轴你管我啊~ **/
  width: 100%;
}

.title-bar{
  display: flex;
  flex-direction: row;
  padding: 3px;
  background-color: white;
}

.search-input-wrapper{
  flex: 8;
  padding: 2px;
}

.search-input{
  padding-top: 1px;
  padding-bottom: 1px;
  padding-left: 20px;
  padding-right: 20px;
  font-size: 16px;
  text-align: center;
  border-radius: 5px;
  border: 1px solid #707070;
}

.title-bar-btn-wrapper{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 3px;
}

.title-bar-btn{
  flex: 1;
  width: 25px;
  height: 25px;
}