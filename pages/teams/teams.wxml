      <view class="blank"></view>
      <team-info-card id="team1"
        teamName='精弘网络产品开发部'
        peopleNumber= '35'
        projectNumber= '6'
        todoNumber= '68'>
      </team-info-card>
    </swiper-item>
    <swiper-item>
      <view>emmmmmm</view>
    </swiper-item>
  </swiper>
  
  <button class="weui_btn_mini" type="primary" bindtap="createTeam">创建团队</button>
</view>
